@model  FoodTruckCerrado.Models.FotosFood
<h2>Adiciona</h2>
<section class="formularios">
    @using (Html.BeginForm("Adiciona", "FotosFood", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(c => c.FoodTruckId)
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Salvar Foto do seu foodTruck
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <input type="file" name="file" />
                        <br />
                        <input type="submit" class="btn-primary form-control" value="Salvar" />
                    </div>
                </div>
            </div>
        </div>
    }
</section>