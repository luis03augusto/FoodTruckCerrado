@model FoodTruckCerrado.Models.FotosFood


<section class="formularios">
    @using (Html.BeginForm("Form", "FotoFood", FormMethod.Post, new { enctype = "multipart/form-data", @class = "well form-horizontal" }))
    {

        @Html.HiddenFor(f => f.FoodTruckId)

        <fieldset>
            @Html.ValidationMessage("Food Truck Invalido")
            <!-- Form Name -->
            <legend>Cadastrar Foto</legend>

            <div class="form-group">
                <label class="col-md-4 control-label">Imagem:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                        <div id="imagem"></div>
                        <input id="fileUpload" type="file" name="file" />
                        <br />
                    </div>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Salvar <span class="glyphicon glyphicon-floppy-disk"></span></button>
                </div>
            </div>

        </fieldset>
    }
</section>

<script src="~/Scripts/PreviewFotos.js"></script>
