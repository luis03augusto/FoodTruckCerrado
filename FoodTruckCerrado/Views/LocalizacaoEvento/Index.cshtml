<input type="hidden" id="long" value="@ViewBag.Loc.Logitude" />
<div id="map">

</div>

<div style="padding-top: 200px">
    <p class="btn btn-default"> @Html.ActionLink("Deletar", "Deleta", new { id = ViewBag.Loc.Id })</p>
    <p class="btn btn-default"> @Html.ActionLink("Editar", "Atualizar", new { id = ViewBag.Loc.Id })</p>
</div>
