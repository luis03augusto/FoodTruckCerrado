<div class="container">

    <form action="@Url.Action("Autentica")" method="post" class="well form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend>Login Food Truck Cerrado</legend>

            <!-- Text input-->
            @Html.ValidationMessage("login.Ivalido")

            <div class="form-group">
                <label class="col-md-4 control-label">Email:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login" name="login" type="text" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Senha:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="senha" name="senha" type="password" class="form-control" />
                    </div>
                </div>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit"  value="Autenticar" class="btn btn-primary">Login <span class="glyphicon glyphicon-ok"></span></button>
                    @Html.ActionLink("Cadastra-se", "Form", "Proprietario", null, new { @class = "btn btn-primary" })
                </div>
            </div>

        </fieldset>
    </form>
</div>
