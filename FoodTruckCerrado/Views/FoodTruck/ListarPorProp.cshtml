@model IEnumerable<FoodTruckCerrado.Models.FoodTruck>

<section>
    <!-- 1º Thumbail -->
    <h1 class="food-truck-titulo">Food Trucks.</h1>
    <div class="botao-add">
        @Html.ActionLink("Novo", "Form", null, new { @class = "btn btn-primary" })
    </div>
    <div class="food-truck-pai">
        @foreach (var foodtruck in Model)
        {
            <figure class="thumbnail img-thumbnail box-food-truck">

                <img src="@foodtruck.FotoCapa" alt="Foto do FoodTruck">
                <figcaption>
                @Html.ActionLink(foodtruck.Nome, "Visualiza", new { id = foodtruck.Id }, new {@class= "titulo-box-food-truck" })
                @Html.ActionLink("Editar", "Atualizar", new { id = foodtruck.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Deletar", "Deleta", new { id = foodtruck.Id }, new {@class="btn btn-danger"})
                </figcaption>
            </figure>
        }
    </div>
</section>
