@model IList<FoodTruckCerrado.Models.Evento>
<section class="section-cardapio">
    
    <h2 id="titulo-evento" class="text-center">Eventos</h2>
        @if (WebSecurity.IsAuthenticated && Roles.IsUserInRole(WebSecurity.CurrentUserName, "admin"))
        {
            <div class="botao-add">
                @Html.ActionLink("Add Eventos", "Form", null, new { @class = "btn btn-primary" })
            </div>
        }
        
    <div  id="eventos" class="cardapio">
        @foreach (var evento in Model)
        {
            <div class="prato">
                <figure class="thumbnail img-thumbnail img-responsive">

                    <img src="@evento.FotoCapa" alt="Foto do FoodTruck">

                    <figcaption class="caption">
                        <h3 id="data-evento">@Html.DisplayFor(m => evento.Data)</h3>
                        @Html.ActionLink(evento.Nome, "Visualiza", new { id = evento.Id }, new { @id="eventos-caption" })
                        <p>@Html.DisplayFor(m => evento.Descricao) </p>
                      @if (WebSecurity.IsAuthenticated && Roles.IsUserInRole(WebSecurity.CurrentUserName, "admin"))
                      {
                        <p>
                            @Html.ActionLink("Editar", "Atualizar", new { id = evento.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Deltar", "Deleta", new { id = evento.Id }, new { @class = "btn btn-danger" })
                        </p>
                      }
                        
                    </figcaption>
                </figure>
            </div>
        }
    </div >
</section>