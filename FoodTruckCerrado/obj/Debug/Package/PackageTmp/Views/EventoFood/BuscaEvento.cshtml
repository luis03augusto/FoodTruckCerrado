@model IList<FoodTruckCerrado.Models.Evento>
<section class="section-eventos">
        <h2>Eventos Disponiveis</h2>

    <div class="box-evento-food-pai">
        @foreach (var evento in Model)
        {
            <div class="evento-food">
                <figure class="thumbnail img-thumbnail">

                    <img src="@evento.FotoCapa" alt="Foto do FoodTruck">

                    <figcaption class="food-truck-eventos-evento">
                        <h3>
                            @Html.ActionLink(evento.Data.Date.ToString("dd/MM/yyyy"), "Visualiza", new { id = evento.Id }, null)
                            -
                            @Html.ActionLink(evento.Nome, "Visualiza", new { id = evento.Id }, null)
                        </h3>
                    </figcaption>
                        @{
                            var cont = 0;
                        }
                        @foreach (var item in ViewBag.Evento)
                        {
                            if (item.EventoId == evento.Id)
                            {
                                cont++;
                            }
                        }
                        @if (cont > 0)
                        {
                            <p>
                                Já cadastrado!
                                @Html.ActionLink("Deixar Evento", "SairDoEvento", "EventoFood", new { idFood = ViewBag.Food, idEvento = evento.Id }, new { @class = "btn btn-danger" })
                            </p>
                        }
                        else
                        {
                            <p>
                                @Html.ActionLink("Participar", "AddFood", "EventoFood", new { idFood = ViewBag.Food, idEvento = evento.Id }, new { @class = "btn btn-primary" })
                            </p>
                        }
                    
                </figure>
            </div>
           }
    </div>
</section>