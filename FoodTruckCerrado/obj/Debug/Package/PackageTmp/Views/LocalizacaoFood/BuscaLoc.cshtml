@model  IList<FoodTruckCerrado.Models.LocalizacaoFood>
<section class="agenda-food-truck">
    <h2 class="text-center">Agenda Food Truck</h2>
   <div class="botoes-da-localizacao">
    @if (WebSecurity.IsAuthenticated)
    {
        MembershipUser mu = Membership.GetUser();
        int propId = Convert.ToInt32(mu.ProviderUserKey.ToString());

        if (propId == ViewBag.Id)
        {
            @Html.ActionLink("Add nova localização", "Form", "LocalizacaoFood", new { idFood = Model[0].FoodTruckId }, new { @class = "btn btn-primary" })
        }
    }

    @Html.ActionLink("Histórico", "Historico", "LocalizacaoFood", new { idFood = Model[0].FoodTruckId }, new { @class = "btn btn-primary" })
   </div>
    <div class="localizacao-box-pai">

    @foreach (var loca in Model)
    {
        <div class="localizacao-box">
            <p id="data">@Html.DisplayFor(l => loca.DataLocalização)</p>
            <p>@loca.Descricao</p>
            <p>@Html.ActionLink("Ver localização", "Index", "LocalizacaoFood", new { id = loca.Id, idUser = ViewBag.Id }, new { @class = "btn btn-primary" })</p>
</div>
    }

     </div>
</section>